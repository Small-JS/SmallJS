{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Chrome",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/web",
			"preLaunchTask": "Compile Smalltalk"
		},
		{
			"name": "Launch Chrome test",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:3000/?test",
			"webRoot": "${workspaceFolder}/web",
			"preLaunchTask": "Compile Smalltalk"
		},
		{
			"name": "Launch Chrome minimized",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/web",
			"preLaunchTask": "Compile Smalltalk minimized"
		},
		{
			"name": "Launch Edge",
			"request": "launch",
			"type": "msedge",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/web",
			"preLaunchTask": "Compile Smalltalk"
		},
		{
			"name": "Launch Edge test",
			"request": "launch",
			"type": "msedge",
			"url": "http://localhost:3000/?test",
			"webRoot": "${workspaceFolder}/web",
			"preLaunchTask": "Compile Smalltalk"
		},
		{
			"name": "Launch Firefox",
			"request": "launch",
			"type": "firefox",
			"reAttach": true,
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/web",
			"preLaunchTask": "Compile Smalltalk",
			"pathMappings": [
				{
					"url": "http://localhost:3000/src",
					"path": "${workspaceFolder}/src"
				},
				{
					"url": "http://localhost:3000/Smalltalk",
					"path": "${workspaceFolder}/../../Smalltalk"
				}
			]
		},
		{
			"name": "Launch Firefox test",
			"request": "launch",
			"type": "firefox",
			"reAttach": true,
			"url": "http://localhost:3000/?test",
			"webRoot": "${workspaceFolder}/web",
			"preLaunchTask": "Compile Smalltalk",
			"pathMappings": [
				{
					"url": "http://localhost:3000/src",
					"path": "${workspaceFolder}/src"
				},
				{
					"url": "http://localhost:3000/Smalltalk",
					"path": "${workspaceFolder}/../../Smalltalk"
				}
			]
		}
	]
}
