{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: watch - tsconfig.json",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": {	"runOn": "folderOpen" }
		},
		{
			"label": "Compile Smalltalk",
			"type": "shell",
			"command": "node",
			"args": [ "../Compiler/out/App.js", "../Smalltalk/Core", "../Smalltalk/Node", "src", "out" ],
			// Without source maps (option "-s"), for easier JS debugging:
			// "args": [  "../Compiler/out/App.js", "-s", "../Smalltalk/Core", "../Smalltalk/Node", "src", "out" ],
			"problemMatcher": []
		}
	]
}
