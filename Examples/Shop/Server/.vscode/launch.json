	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Server",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/out/main.js",
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/.env",
			"preLaunchTask": "Compile server"
		},
		{
			"name": "Launch Server test",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/out/main.js",
			"args": "-test",
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/.env",
			"preLaunchTask": "Compile server"
		},
		{
			"name": "Launch Server minimized",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/out/main.js",
			"cwd": "${workspaceFolder}",
			"envFile": "${workspaceFolder}/.env",
			"preLaunchTask": "Compile server minimized"
		}
	]
}
