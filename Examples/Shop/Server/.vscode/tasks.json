{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: watch - tsconfig.json",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": {	"runOn": "folderOpen" }
		},
		{
			"label": "Compile server",
			"type": "shell",
			"command": "node",
			"args": [  "../../../Compiler/out/App.js", "-m", "ShopServer", "-t", "../../../Smalltalk/Core", "../../../Smalltalk/Node",  "+t", "src", "out" ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		}
	]
}
