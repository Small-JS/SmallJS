	"version": "0.2.0",
	"configurations": [
		{
			"name": "Bash simple",
			"type": "bashdb",
			"request": "launch",
			// Unfortunately, this fails on Windows with Mingw (3.6.1).
			// See: https://github.com/rogalmic/vscode-bash-debug/issues/161
			// WSL is supported, though.
			"cwd": "${workspaceFolder}",
			"program": "build.sh",
			"terminalKind": "integrated"
		}
	]
}
